@model IEnumerable<BBQLibary.Kochvorgang>

@{
    ViewBag.Title = "Index";
}

<h2>Kochvorgänge</h2>

<p>
    @Html.ActionLink("Neuen Kochvorgang anlegen", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Protokoll)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Rezept.Zutatenliste)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Protokoll)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Rezept.Zutatenliste)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
