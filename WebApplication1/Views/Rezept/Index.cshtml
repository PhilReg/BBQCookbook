@model IEnumerable<BBQLibary.Rezept>

@{
    ViewBag.Title = "Index";
}

<h2>Rezepte</h2>

<p>
    @Html.ActionLink("Neues Rezept anlegen", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Zutatenliste)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Vorgehen)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Holzart)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Equipmentliste)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Zutatenliste)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Vorgehen)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Holzart)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Equipmentliste)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
