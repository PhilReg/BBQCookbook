@model IEnumerable<ImpBBQLibary.Kochvorgang>

@{
    ViewBag.Title = "Index";
}

<h2>Alle Kochvorgänge. Um einen neuen Kochvorgang anzulegen gehe zur Rezept Seite.</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Protokoll)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Rezept.Rezeptnamen)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Koch.Kochname)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Protokoll)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Rezept.Rezeptnamen)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Koch.Kochname)
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id=item.Id }) 
        </td>
    </tr>
}

</table>
